@using BingoGame.Areas.Bingo.ViewModels;
@model BingoGameSessionViewModel


<div class="padding-mid">
    <span>Rolled value : @Model.RolledValue</span>
</div>
<div class="padding-mid">
    <div>Existing values</div>
    <div class="padding-mid">
        @foreach(var val in Model.GameSessionData.SessionExistingValues)
        {
            <span class="text-underline">@val</span>
        }
    </div>
</div>
<div>
    <table class="table">
        <tbody>
            @for (int i = 0; i < Model.GameSessionData.Board.BoardHeight; i++)
            {
                <tr>
                    @for (int j = 0; j < Model.GameSessionData.Board.BoardWidth; j++)
                    {
                        bool isMatchedValue = Model.GameSessionData.MatchesValues.Any(val => val.BingoValue == Model.GameSessionData.Board.BoardRepresentation[i,j]);
                        <td>
                            <div class="@(isMatchedValue ? "match-bingo-value" : "default-bingo-value") text-center bingo-value">
                                @Model.GameSessionData.Board.BoardRepresentation[i, j]
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>