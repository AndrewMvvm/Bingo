@using BingoGame.Areas.Bingo.ViewModels;
@model BingoWinViewModel


@{

    ViewBag.Title = "BingoWin";
}

<div class="show-animated">
    <div class="padding-mid">
        CONGRATULATIONS!
        <div>
            YOU WIN!
        </div>
    </div>

    <div>
        <table class="table">
            <tbody>
                @for (int i = 0; i < Model.GameSessionData.Board.BoardHeight; i++)
                {
                    <tr>
                        @for (int j = 0; j < Model.GameSessionData.Board.BoardWidth; j++)
                        {
                            bool isMatchedValue = Model.GameSessionData.MatchesValues.Any(val => val.BingoValue == Model.GameSessionData.Board.BoardRepresentation[i, j]);
                            <td>
                                @{
                                    bool isWinValue = Model.WinValues.Any(val => val == Model.GameSessionData.Board.BoardRepresentation[i, j]);
                                }
                                <div class="@(isWinValue ? "win-bingo-value" : "default-bingo-value") text-center bingo-value">
                                    @Model.GameSessionData.Board.BoardRepresentation[i, j]
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        @Html.ActionLink("Play again", "Index", "BingoGame", new { isNewGameSession = true }, new { @class="btn btn-success"})
    </div>
</div>